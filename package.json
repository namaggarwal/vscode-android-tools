{
	"name": "android",
	"displayName": "android-tools",
	"description": "Android ",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/AndroidManifest.xml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "android.newActivity",
				"title": "New Activity"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "npm run copy:templates && tsc -watch -p ./",
		"copy:templates": "rm -rf out/ && mkdir -p out/templates && cp -rv src/templates/* out/templates/",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"template-file": "^3.1.0",
		"xml-js": "^1.6.11"
	}
}
